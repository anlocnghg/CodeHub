<Application
    x:Class="TSS.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--#region Resource from Lib-->

                <ResourceDictionary Source="ms-appx:///LocLib.WinUI/ResourceDicts/Common.xaml" />

                <!--#endregion-->

                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->

            <!--#region App-wide Resources-->
            <SolidColorBrush x:Key="myBackgroundColor1" Color="#022140" />
            <SolidColorBrush x:Key="myBackgroundColor2" Color="#4D6D9A" />

            <SolidColorBrush x:Key="myForegroundColor" Color="#FFFFFF" />
            <!--#endregion-->
        </ResourceDictionary>
    </Application.Resources>
</Application>